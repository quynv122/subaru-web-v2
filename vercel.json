{
  "builds": [
    { "src": "**/*", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/sitemap.xml",
      "headers": {
        "Content-Type": "application/xml"
      },
      "dest": "/sitemap.xml"
    },

    { "src": "/", "dest": "/index.html" },
    { "src": "/page/(.*)", "dest": "/page/$1" },
    { "src": "/page/.*", "dest": "/page/index.html" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
